<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBudgetMAUIApp.Handlers.IncomesCarousel"
             xmlns:handlers="clr-namespace:DailyBudgetMAUIApp.Handlers"
             xmlns:sk="clr-namespace:Maui.FreakyEffects.Skeleton;assembly=Maui.FreakyEffects"
             x:Name="CustomIncomesCarousel">
    <AbsoluteLayout>
        <VerticalStackLayout x:Name="IncomeCarousel" sk:SkeletonEffect.IsParent="False" sk:SkeletonEffect.Animation="{sk:DefaultAnimation Source=Fade, Interval='600',Parameter='0.3'}"  sk:SkeletonEffect.IsBusy="{Binding Source={x:Reference CustomIncomesCarousel}, Path=IsBusy}">

        </VerticalStackLayout>
        <HorizontalStackLayout x:Name="IncomeCarouselIdent" AbsoluteLayout.LayoutBounds="0.5,1" HeightRequest="30" AbsoluteLayout.LayoutFlags="PositionProportional" HorizontalOptions="Center" VerticalOptions="Center">

        </HorizontalStackLayout>
    </AbsoluteLayout>
</ContentView>
