<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBudgetMAUIApp.Handlers.BudgetPayeeChart"
             xmlns:handlers="clr-namespace:DailyBudgetMAUIApp.Handlers"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:sk="clr-namespace:Maui.FreakyEffects.Skeleton;assembly=Maui.FreakyEffects"
             x:Name="CustomBudgetPayeeChart">
    <Grid RowDefinitions="200,Auto" ColumnDefinitions="*, *">
        <Label x:Name="NoTransactions" Text="No transactions for these payees this period" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" TextColor="{StaticResource Gray900}" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="15,0,10,20" HorizontalOptions="Center" VerticalOptions="Center"/>
        <chart:SfCircularChart x:Name="CircularChart"  sk:SkeletonEffect.IsParent="False" sk:SkeletonEffect.Animation="{sk:DefaultAnimation Source=Fade, Interval='600',Parameter='0.3'}"  sk:SkeletonEffect.IsBusy="{Binding Source={x:Reference CustomBudgetPayeeChart}, Path=IsBusy}"  Margin="5,0,0,20" BackgroundColor="Transparent" Grid.Row="0" Grid.Column="0">
            <chart:DoughnutSeries x:Name="Doughnut"  EnableTooltip="True" XBindingPath="XAxesString" YBindingPath="YAxesDouble" ShowDataLabels="False" Radius="1"/>
        </chart:SfCircularChart>
        <ScrollView Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" sk:SkeletonEffect.IsParent="False" sk:SkeletonEffect.Animation="{sk:DefaultAnimation Source=Fade, Interval='600',Parameter='0.3'}"   sk:SkeletonEffect.IsBusy="{Binding Source={x:Reference CustomBudgetPayeeChart}, Path=IsBusy}">
            <VerticalStackLayout x:Name="PayeeLegend">

            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" RowDefinitions="Auto" ColumnDefinitions="*,*" x:Name="PreviousNextPayee" Margin="0,0,0,0" Padding="0" sk:SkeletonEffect.IsBusy="{Binding Source={x:Reference CustomBudgetPayeeChart}, Path=IsBusy}">

        </Grid>
    </Grid>
</ContentView>
