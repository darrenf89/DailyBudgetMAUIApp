<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBudgetMAUIApp.Pages.ViewCategory"
             xmlns:handlers="clr-namespace:DailyBudgetMAUIApp.Handlers"
             xmlns:helpers="clr-namespace:DailyBudgetMAUIApp.Helpers"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:sfList="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:data="clr-namespace:Syncfusion.Maui.DataSource;assembly=Syncfusion.Maui.DataSource"
             xmlns:carousel="clr-namespace:Syncfusion.Maui.Carousel;assembly=Syncfusion.Maui.Carousel"
             BackgroundColor="{StaticResource Primary}"
             x:Name="Content"
             Shell.TabBarIsVisible="False">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*">
            <Label Text="{Binding Title}" TextColor="White" VerticalOptions="Center" Margin="75,0,10,0" Padding="0" FontSize="Large"  FontFamily="OpenSansSemibold" FontAttributes="Bold" HorizontalOptions="Start" Grid.Column="1"/>
        </Grid>
    </Shell.TitleView>
    <sfList:SfListView x:Name="listView" AllowSwiping="True" IsStickyHeader="True" BackgroundColor="White" SelectionMode="None" ItemsSource="{Binding Categories}" AutoFitMode="DynamicHeight" IsScrollingEnabled="True">
        <sfList:SfListView.HeaderTemplate>
            <DataTemplate>
                <AbsoluteLayout BackgroundColor="{StaticResource Primary}">
                    <Button x:Name="btnPlayPause" Clicked="btnPlayPause_Clicked" BackgroundColor="Transparent" ZIndex="99" AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="-0.02,40" Margin="0,0,0,25" Style="{StaticResource TitleButtons}">
                        <Button.ImageSource>
                            <FontImageSource x:Name="PlayPause" FontFamily="MaterialDesignIcons" Glyph="{Binding IsPlaying, Converter={StaticResource PlayPauseGlyph}}" Size="40" Color="{DynamicResource Tertiary}"/>
                        </Button.ImageSource>
                    </Button>
                    <Button BackgroundColor="Transparent" ZIndex="99" AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="1.02,40" Margin="0,0,0,25" Style="{StaticResource TitleButtons}">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Fullscreen}" Size="40" Color="{DynamicResource Tertiary}"/>
                        </Button.ImageSource>
                    </Button>
                    <Button BackgroundColor="Transparent" ZIndex="99" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="-0.03,0.53" Margin="0,0,0,0" Style="{StaticResource TitleButtons}">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Arrow_left}" Size="40" Color="{DynamicResource Gray400}"/>
                        </Button.ImageSource>
                    </Button>
                    <Button BackgroundColor="Transparent" ZIndex="99" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1.03,0.53" Margin="0,0,0,0" Style="{StaticResource TitleButtons}">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Arrow_right}" Size="40" Color="{DynamicResource Gray400}"/>
                        </Button.ImageSource>
                    </Button>
                    <Border HorizontalOptions="Center" ZIndex="99" AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0,45" IsVisible="{Binding ChartUpdating}" Style="{DynamicResource DashboardMainContent}" WidthRequest="{Binding ChartContentWidth}" HeightRequest="{Binding ChartContentHeight}" Margin="10,0,10,20" Padding="0">
                        <ActivityIndicator IsRunning="{Binding ChartUpdating}" IsVisible="{Binding ChartUpdating}" VerticalOptions="Center" HorizontalOptions="Center" Margin="0" Color="{DynamicResource Primary}" Scale="1.2"/>
                    </Border>
                    <VerticalStackLayout AbsoluteLayout.LayoutBounds="0,0" AbsoluteLayout.LayoutFlags="PositionProportional" HorizontalOptions="Center" WidthRequest="{Binding ScreenWidth}" >
                        <HorizontalStackLayout x:Name="hslTabs" HeightRequest="45" VerticalOptions="Center" HorizontalOptions="Center">
                            <carousel:SfCarousel SelectedIndex="{Binding SelectedIndex}" x:Name="TabCarousel" ItemsSource="{Binding PayPeriods}" ItemHeight="35" VerticalOptions="Center" HorizontalOptions="Center" ScaleOffset="0.6" SwipeEnded="TabCarousel_SwipeEnded" WidthRequest="{Binding TabContentWidth}" SelectionChanged="TabCarousel_SelectionChanged">
                                <carousel:SfCarousel.ItemTemplate>
                                    <DataTemplate>
                                        <Border Stroke="{StaticResource White}" BackgroundColor="{StaticResource White}" StrokeShape="RoundRectangle 2" StrokeThickness="1">
                                            <HorizontalStackLayout Padding="10,0,10,0" VerticalOptions="Center" HorizontalOptions="Center">
                                                <Label Text="{Binding .}" TextColor="{StaticResource Primary}" FontSize="Small" FontAttributes="Bold"/>
                                            </HorizontalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </carousel:SfCarousel.ItemTemplate>
                            </carousel:SfCarousel>
                        </HorizontalStackLayout>
                        <Border Style="{DynamicResource DashboardMainContent}" WidthRequest="{Binding ChartContentWidth}" HeightRequest="{Binding ChartContentHeight}" Margin="0,0,0,20" Padding="0">
                            <chart:SfCircularChart Margin="5,0,5,20" BackgroundColor="Transparent">
                                <chart:SfCircularChart.GestureRecognizers>
                                    <SwipeGestureRecognizer Direction="Left" Swiped="SwipeGestureRecognizer_Swiped"/>
                                    <SwipeGestureRecognizer Direction="Right" Swiped="SwipeGestureRecognizer_Swiped"/>
                                </chart:SfCircularChart.GestureRecognizers>
                                <chart:SfCircularChart.Legend>
                                    <chart:ChartLegend Placement="Right">
                                        <chart:ChartLegend.ItemTemplate>
                                            <DataTemplate>
                                                <HorizontalStackLayout ZIndex="99">
                                                    <RoundRectangle CornerRadius="2" HeightRequest="8" WidthRequest="8" Margin="0,0,2,5" Background="{Binding IconBrush}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    <Label Text="{Binding Text}" Margin="0,0,30,5" FontSize="Micro" TextColor="{StaticResource Gray900}" HorizontalOptions="Center" VerticalOptions="Center" CharacterSpacing="0"/>
                                                </HorizontalStackLayout>
                                            </DataTemplate>
                                        </chart:ChartLegend.ItemTemplate>
                                    </chart:ChartLegend>
                                </chart:SfCircularChart.Legend>
                                <chart:PieSeries EnableTooltip="True" PaletteBrushes="{Binding ChartBrushes}" ItemsSource="{Binding CategoriesChart}" XBindingPath="XAxesString" YBindingPath="YAxesDouble" ShowDataLabels="False" Radius="1"/>
                            </chart:SfCircularChart>
                        </Border>
                        <BoxView HeightRequest="8" Color="{StaticResource White}" />
                    </VerticalStackLayout>
                </AbsoluteLayout>
            </DataTemplate>
        </sfList:SfListView.HeaderTemplate>
        <sfList:SfListView.StartSwipeTemplate>
            <DataTemplate>
                <Border Stroke="Transparent" StrokeThickness="0">
                    <Grid VerticalOptions="Center" HorizontalOptions="Center" ColumnDefinitions="48,48" RowDefinitions="48" BackgroundColor="Transparent">
                        <Border Grid.Column="0" BackgroundColor="{StaticResource InfoLight}" StrokeThickness="0" Padding="0" Stroke="Transparent">
                            <Image HorizontalOptions="Center" VerticalOptions="Center" Margin="0">
                                <Image.Source>
                                    <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Edit}" Size="30"  Color="{DynamicResource Info}" />
                                </Image.Source>
                            </Image>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer x:Name="EditCategory" Tapped="EditCategory_Tapped" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                        </Border>
                        <Border Grid.Column="1" BackgroundColor="{StaticResource DangerLight}" StrokeThickness="0" Padding="0" Stroke="Transparent">
                            <Image HorizontalOptions="Center" VerticalOptions="Center" Margin="0">
                                <Image.Source>
                                    <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Delete_forever }" Size="30"  Color="{DynamicResource Danger}" />
                                </Image.Source>
                            </Image>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer x:Name="DeleteCategory" Tapped="DeleteCategory_Tapped" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                        </Border>
                    </Grid>
                </Border>
            </DataTemplate>
        </sfList:SfListView.StartSwipeTemplate>
        <sfList:SfListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <VerticalStackLayout Padding="10,5,10,5">
                            <Border Style="{StaticResource brdCardViewRectange}">
                                <Grid ColumnDefinitions="Auto, *, Auto, Auto" RowDefinitions="24,24">
                                    <Label IsVisible="{Binding IsEditMode,Converter={StaticResource BoolConverter}}" Padding="10,0,0,0" Grid.RowSpan="2" Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center" Text="{Binding CategoryName}" FontAttributes="Bold" FontSize="Medium" TextColor="{StaticResource Gray900}"/>
                                    <HorizontalStackLayout IsVisible="{Binding IsEditMode}" Padding="10,0,0,0" Grid.RowSpan="2" Grid.Column="0" Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center">
                                        <handlers:BorderlessEntry VerticalOptions="Center" HorizontalOptions="Start"  TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium" Text="{Binding CategoryName}"/>
                                        <Button>

                                        </Button>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Padding="0,0,10,0" Grid.Column="1" Grid.Row="0" HorizontalOptions="End" IsVisible="{Binding IsEditMode,Converter={StaticResource BoolConverter}}">
                                        <Label HorizontalOptions="End" VerticalOptions="Center" Text="Spend pay period | " TextColor="{StaticResource Info}" CharacterSpacing="0" FontSize="Caption"/>
                                        <Label HorizontalOptions="End" VerticalOptions="Center" Text="{Binding CategorySpendPayPeriod, Converter={StaticResource DecimalToCurrencyString}}" TextColor="{StaticResource Gray900}" CharacterSpacing="0" FontSize="Caption"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Padding="0,0,10,0" Grid.Column="1" Grid.Row="1" HorizontalOptions="End" IsVisible="{Binding IsEditMode,Converter={StaticResource BoolConverter}}">
                                        <Label HorizontalOptions="End" VerticalOptions="Center" Text="Spend all time | " TextColor="{StaticResource Info}" CharacterSpacing="0" FontSize="Caption"/>
                                        <Label HorizontalOptions="End" VerticalOptions="Center" Text="{Binding CategorySpendAllTime, Converter={StaticResource DecimalToCurrencyString}}" TextColor="{StaticResource Gray900}" CharacterSpacing="0" FontSize="Caption"/>
                                    </HorizontalStackLayout>
                                    <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Margin="0,5,10,0">
                                        <Image.Source>
                                            <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Double_arrow}" Size="15"  Color="{DynamicResource Gray900}" />
                                        </Image.Source>
                                    </Image>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </sfList:SfListView.ItemTemplate>
    </sfList:SfListView>
</ContentPage>