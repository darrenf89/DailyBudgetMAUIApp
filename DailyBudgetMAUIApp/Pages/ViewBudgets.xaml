<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DailyBudgetMAUIApp"
             xmlns:handlers="clr-namespace:DailyBudgetMAUIApp.Handlers"
             xmlns:helpers="clr-namespace:DailyBudgetMAUIApp.Helpers"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:ViewModels="clr-namespace:DailyBudgetMAUIApp.ViewModels"
             x:Class="DailyBudgetMAUIApp.Pages.ViewBudgets"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             xmlns:touchEffects="clr-namespace:Maui.FreakyEffects.TouchEffects;assembly=Maui.FreakyEffects"
             xmlns:sfavatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="True"
             Shell.FlyoutBehavior="Flyout"
             droid:NavigationBar.Color="{StaticResource PrimaryDark}"
             droid:NavigationBar.Style="LightContent"
             Title="{Binding Title}">
    <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto, Auto, *, Auto">
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5,0,150,210" AbsoluteLayout.LayoutFlags="PositionProportional" Margin="0,20,0,0" Grid.Row="1" Grid.Column="0" >
            <ImageButton Command="{Binding ChangeSelectedProfilePicCommand}" Style="{StaticResource TitleButtons}" ZIndex="999" WidthRequest="30" HeightRequest="30" Padding="6" Aspect="Center" CornerRadius="20" VerticalOptions="Center" Margin="5,0,0,0" AbsoluteLayout.LayoutBounds="220,70" AbsoluteLayout.LayoutFlags="None" BackgroundColor="{StaticResource Primary}">
                <ImageButton.Source>
                    <FontImageSource FontFamily="MaterialDesignIcons" Glyph="{x:Static helpers:MaterialDesignIconsFonts.Photo_camera}" Color="{DynamicResource White}" Size="18"/>
                </ImageButton.Source>
                <ImageButton.Shadow>
                    <Shadow />
                </ImageButton.Shadow>
            </ImageButton>
            <sfavatar:SfAvatarView Stroke="White" StrokeThickness="3" x:Name="ProfilePicture" AbsoluteLayout.LayoutBounds="0.5,0" AbsoluteLayout.LayoutFlags="PositionProportional" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="100" CornerRadius="50" WidthRequest="100" >
                <sfavatar:SfAvatarView.Shadow>
                    <Shadow/>
                </sfavatar:SfAvatarView.Shadow>
            </sfavatar:SfAvatarView>
        </AbsoluteLayout>
        <VerticalStackLayout Grid.Column="0" Grid.Row="2">
            <Label CharacterSpacing="1.5" Margin="0,10,0,0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Grid.Row="0" FontSize="{Binding Source=Medium, Converter={StaticResource StringToSizeConverter}}" FontAttributes="Bold" TextColor="{DynamicResource Primary}" Text="{Binding NickName}"/>
            <Label CharacterSpacing="0" Margin="0,4,0,0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Grid.Row="0" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" FontAttributes="Bold" TextColor="{DynamicResource Gray500}" Text="{Binding Email}"/>
            <BoxView HeightRequest="3" Color="{DynamicResource PrimaryDark}" Margin="0,10,0,0">
                <BoxView.Shadow>
                    <Shadow Offset="0,5" Opacity="0.3" Brush="{DynamicResource Gray900}" Radius="5" />
                </BoxView.Shadow>
            </BoxView>
        </VerticalStackLayout>
        <ScrollView Grid.Row="3" Grid.Column="0">
            <StackLayout BindableLayout.ItemsSource="{Binding Budgets}" >
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="45,*,Auto" Padding="20">
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,0">
                                <HorizontalStackLayout Margin="0,0,0,10">
                                    <Label Padding="0" Margin="0" Text="{Binding BudgetName}" TextColor="{StaticResource PrimaryDark}" FontAttributes="Bold" FontSize="{Binding Source=Large, Converter={StaticResource StringToSizeConverter}}" VerticalTextAlignment="End"/>
                                </HorizontalStackLayout>
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto, *">
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding BankBalance, StringFormat='{0:c}'}" TextColor="{StaticResource Info}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" Margin="20,0,0,2"/>
                                    <Label Grid.Row="0" Grid.Column="0" Text="Bank Balance " TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}"/>
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding MoneyAvailableBalance, StringFormat='{0:c}'}" TextColor="{StaticResource Info}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" Margin="20,0,0,2"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="Money Available Balance " TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}"/>
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding LeftToSpendBalance, StringFormat='{0:c}'}" TextColor="{StaticResource Info}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" Margin="20,0,0,2"/>
                                    <Label Grid.Row="2" Grid.Column="0" Text="Left to Spend Balance " TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}"/>
                                </Grid>
                            </VerticalStackLayout>
                            <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,20,0,15" />
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalOptions="Start" IsVisible="{Binding IsCreated, Converter={StaticResource BoolConverter}}" Padding="0,0,20,0">
                                <Label Text="Continue setting up budget" Margin="0,0,0,8" TextColor="{StaticResource Gray600}" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                                <Label Text="Go back to the budget creation page to finalise set up." TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                            </VerticalStackLayout>
                            <HorizontalStackLayout HorizontalOptions="End" Padding="0,0,4,0" Grid.Column="2" Grid.Row="2" IsVisible="{Binding IsCreated, Converter={StaticResource BoolConverter}}" touchEffects:TouchEffect.Color="{StaticResource InfoLLL}">
                                <Label VerticalTextAlignment="Center" TextColor="{StaticResource Info}" Text="Complete Setup" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}"/>
                                <HorizontalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:ViewBudgetsViewModel}}, Path=CompleteBudgetSetUpCommand}" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout.GestureRecognizers>
                            </HorizontalStackLayout>
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalOptions="Start" IsVisible="{Binding IsCreated}" Padding="0,0,20,0">
                                <Label Text="Select Budget" Margin="0,0,0,8" TextColor="{StaticResource Gray600}" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                                <Label Text="Select this budget to see the full details and make changes" TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                            </VerticalStackLayout>
                            <HorizontalStackLayout HorizontalOptions="End" Padding="0,0,4,0" Grid.Column="2" Grid.Row="2" IsVisible="{Binding IsCreated}" touchEffects:TouchEffect.Color="{StaticResource InfoLLL}">
                                <Label VerticalTextAlignment="Center" TextColor="{StaticResource Info}" Text="Switch Budget" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}"/>
                                <HorizontalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:ViewBudgetsViewModel}}, Path=SelectedBudgetCommand}" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout.GestureRecognizers>
                            </HorizontalStackLayout>
                            <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,20,0,15" />
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" HorizontalOptions="Start" Padding="0,0,20,0">
                                <Label Text="Delete Budget" Margin="0,0,0,8" TextColor="{StaticResource Gray600}" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                                <Label Text="No longer need this budget, feel free to delete." TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap"/>
                            </VerticalStackLayout>
                            <HorizontalStackLayout HorizontalOptions="End" Padding="0,0,4,0" Grid.Column="2" Grid.Row="4" touchEffects:TouchEffect.Color="{StaticResource InfoLLL}">
                                <Label VerticalTextAlignment="Center" TextColor="{StaticResource Info}" Text="Delete Budget" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}"/>
                                <HorizontalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:ViewBudgetsViewModel}}, Path=DeleteBudgetCommand}" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout.GestureRecognizers>
                            </HorizontalStackLayout>
                            <BoxView Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,20,0,15" />
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalOptions="Start" Padding="0,0,20,0" IsVisible="{Binding IsSharedValidated}">
                                <Label Text="You are sharing" Margin="0,0,0,8" TextColor="{StaticResource Gray600}" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap" />
                                <Label Text="You are sharing this budget, Click to view the details" TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap" />
                            </VerticalStackLayout>
                            <HorizontalStackLayout Grid.Column="2" Grid.Row="6" Padding="0,0,4,0" touchEffects:TouchEffect.Color="{StaticResource InfoLLL}" HorizontalOptions="End" IsVisible="{Binding IsSharedValidated}">
                                <Label VerticalTextAlignment="Center" TextColor="{StaticResource Info}" Text="View Details" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}"/>
                                <HorizontalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:ViewBudgetsViewModel}}, Path=ViewShareBudgetCommand}" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout.GestureRecognizers>
                            </HorizontalStackLayout>
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalOptions="Start" Padding="0,0,20,0" IsVisible="{Binding IsSharedValidated, Converter={StaticResource BoolConverter}}">
                                <Label Text="Share with someone?" Margin="0,0,0,8" TextColor="{StaticResource Gray600}" FontAttributes="Bold" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap" />
                                <Label Text="Would you like to share your budget with someone?" TextColor="{StaticResource Gray400}" FontSize="{Binding Source=Caption, Converter={StaticResource StringToSizeConverter}}" LineBreakMode="CharacterWrap" />
                            </VerticalStackLayout>
                            <HorizontalStackLayout Grid.Column="2" Grid.Row="6" Padding="0,0,4,0" touchEffects:TouchEffect.Color="{StaticResource InfoLLL}" HorizontalOptions="End" IsVisible="{Binding IsSharedValidated, Converter={StaticResource BoolConverter}}">
                                <Label VerticalTextAlignment="Center" TextColor="{StaticResource Info}" Text="Share Budget" FontSize="{Binding Source=Small, Converter={StaticResource StringToSizeConverter}}"/>
                                <HorizontalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:ViewBudgetsViewModel}}, Path=ShareBudgetCommand}" CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout.GestureRecognizers>
                            </HorizontalStackLayout>
                            <BoxView Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="2" Color="{StaticResource Info}" Margin="0,20,0,0" />
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
        <Grid RowDefinitions="Auto" ColumnDefinitions="*" BackgroundColor="{StaticResource Primary}" x:Name="AddNewBudget" Grid.Row="4" Grid.Column="0">
            <Button Command="{Binding AddNewBudgetCommand}" WidthRequest="{Binding SignOutButtonWidth}" Grid.Row="0" Grid.Column="0" Style="{DynamicResource buttonClicked}" Text="Add new budget" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" Margin="5,10,5,10" FontSize="18" CornerRadius="20" BackgroundColor="{StaticResource White}" TextColor="{StaticResource Primary}"/>
        </Grid>
    </Grid>
</local:BasePage>